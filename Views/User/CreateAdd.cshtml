@model ProjectAK.Models.person
@{
    ViewBag.Title = "CreateAdd";
}

@*<h2>CreateAdd</h2>*@

        <div id="main-div">
        <div id="box" class="img-responsive">
            @using (Html.BeginForm("CreateAdd", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="insidebox">
                    <div><h1>Post an Ad</h1></div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            @Html.DropDownListFor(model => model.pro_usr_id_fk, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                        </div>
                        <span style="color:red">@Html.ValidationMessageFor(model => model.pro_usr_id_fk)</span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            @Html.TextBoxFor(model => model.pro_name, new { @class = "form-control", @placeholder = "Product Name" })
                        </div>
                        <span style="color:red">@Html.ValidationMessageFor(model => model.pro_name)</span>
                    </div>



                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            @Html.TextBoxFor(model => model.pro_desc, new { @class = "form-control", @placeholder = "Description" })
                        </div>
                        <span style="color:red">@Html.ValidationMessageFor(model => model.pro_desc)</span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="ADD" class="btn btn-success btn-block" />
                    </div>
                    <div class="form-group">
                        <p style="color:red">@ViewBag.error</p>
                    </div>
                </div>
            }
        </div>
    </div>




