@model ProjectAK.Models.category

@{
    ViewBag.Title = "Category";
}

@*<div class="catt">
    <h2>CATEGORY</h2>
</div>*@
@*<hr />*@
<div class="login-h">

    <div class="row">
        <div class="col-lg-3">
        </div>

        <div class="col-lg-6">
            <div class="a-col">
                @using (Html.BeginForm("Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="form-in">
                            <h3>ADD CATEGORY </h3>
                            <hr />

                            <div class="imgcontainer">
                                <img src="~/img/Admin_Img/cat1.png" alt="Avatar" class="avatar">
                            </div>


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                @Html.LabelFor(model => model.cat_name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Category Name.." } })
                                    @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.cat_img, "Image", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="input-data">
                                        <input type="file" id="imgfile" name="imgfile" required="required">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.cat_img, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="ADD" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>

                }

                <div>
                        @Html.ActionLink("View Category", "ViewCategory")
                    </div>
            </div>
        </div>

        <div class="col-lg-3">
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
